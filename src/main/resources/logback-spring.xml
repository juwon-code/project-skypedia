<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
    <!-- Constants from .env -->
    <property name="FILE_PATH" value="${LOG_FILE_PATH}"/>
    <property name="MAX_FILE_SIZE" value="${LOG_MAX_FILE_SIZE}"/>
    <property name="MAX_HISTORY" value="${LOG_MAX_HISTORY}"/>
    <property name="TOTAL_SIZE_CAP" value="${LOG_TOTAL_SIZE_CAP}"/>

    <!-- Rolling files -->
    <appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${FILE_PATH}/%d{yy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <totalSizeCap>${TOTAL_SIZE_CAP}</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log level -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="ROLLING_FILE"/>
    </root>
</configuration>